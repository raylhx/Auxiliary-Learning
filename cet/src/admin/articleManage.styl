@import "../style/variable.styl";
#admin-analysis
  .header-wrapper
    background-color:#336699
  .el-main
    width: 960px
    height: auto
    margin: 80px auto
    border-radius :5px
    background-color : white
    .reading-wrapper
      padding: 20px
      .title
        width: 100%
        h1
          font-family:HelveticaNeue-Medium
          font-size: 30px
          color: #000000
          font-weight: normal
          line-height: 1.28571em
        .meta
          display:inline-block
          height: 30px
          padding: 5px
          font-size: 16px
          span
            padding-right: 20px
            color: #999999
            i
              padding-left: 10px
              font-style: normal
              color:#535353
          .switchBtn
            display:inline-block
            width: 120px
            cursor: pointer
            .icon_star-full
              display: block
              margin-bottom: 4px
              width: 16px
              height: 16px
              line-height: 16px
              font-size: 16px
              color: #d2d4d6
              &.active
                color: BLUECOLOR
      .flag-wrapper
        display: inline-block
        float: right
        height: 30px
        padding: 5px
        .title-label
          margin-right :10px
          color: #999
        .favourite
          display:inline-block
          width: 50px
          cursor: pointer
          .icon_thumb_up
            display: block
            margin-bottom: 4px
            width: 24px
            height: 24px
            line-height: 24px
            font-size: 24px
            color: #d2d4d6
            &:hover
              color: BLUECOLOR
              transform: rotate3d(0,0,1,-10deg)
              transform-origin: left  bottom
              transition: all 0.5s
            &.active
              color: BLUECOLOR
      .article-wrapper
        margin-top: 10px
        p
          margin-bottom: 46px
          color: FontColor
          font-size: 18px
          line-height: 46px
.text-wrapper
  position: absolute
  left: 0
  top: 0
  /* 960-20*2-20*2 也就是container的*/
  width: 860px
  height: auto
  min-height: 50px
  background-color: rgba(64,158,255,0.8)
  border-radius: 5px
  box-shadow : 2px 2px 10px #000
  .container
    padding: 1PX 2px
    width:100%
    height:inherit
    .el-loading-mask
      width:100%
      height:100%
      .el-loading-spinner
        margin-top: -15px
    .text
      display:inline-block
      min-height: 50px
      border-radius: 5px
      line-height: 1.5em
      font-size: 20px
      color: white


// 隐藏切换样式
.hidePlain
  display: none
  opacity: 0
  transition: opacity 0.6s
.displayPlain
  display: block
  opacit: 1
  transition: opacity 0.6s


