@import "../../style/variable.styl";

.nav-wrapper
  width:100%
  min-width: 1020px
  .logo
    margin-left: 30px
    display:inline-block
    float:left
  .el-menu-nav
    float:right
    border-bottom:none
    background-color:BLUECOLOR
    .el-menu-item
      a
        display:inline-block
        width: 100%
        height: 100%
        font-size: 20px
        text-decoration:none
        color: #fff
      &:hover
        a
          color: BLUECOLOR
    .el-submenu
      a
        font-size: 20px
        text-decoration:none
        color: #fff
      &:hover
        a
          color:#0000ff

