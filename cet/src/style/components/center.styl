@import "../variable.styl";
.ellipsis
  white-space: nowrap
  overflow: hidden
  text-overflow:ellipsis

.on
  background-color:#363d47

#personalCenter
  .sidebar
    color: #fff;
    position: fixed;
    padding-top: 20px;
    left: 0;
    width: 250px;
    top: 0;
    height: 100%;
    background-color: #3f4652;
    z-index: 1
    .sidebarInner
      display:flex
      flex-direction: column
      height:100%
      .sidebarSection
        display:flex
        align-items:center
        padding-left:20px
        .logo
          flex: 0 1 80px
          width: 80px
          margin-right: 10px
          img
            width: 100%
        .displayNames
          .nickName,.loginName
            display: block
            width: 100%
            height: 22px
            padding-right: 1em
            margin-bottom: 2px
          .loginName
            opacity: .33
      .sidebarViewportContainer
        .sidebarViewport
          flex:0 1 auto
          .sidebarMenu
            position:relative
            list-style-type :none
            line-height: 2.5em
            padding-left:0
            li
              position: relative
              padding-left:20px
              &:hover
                background-color:rgba(57,63,75,0.7)
              a
                display:flex
                justify-content: space-between
                width:100%
                height:35px
                transition: color .3s
                text-decoration :none
                &:visited
                  color: #ffffff
            .on
              background-color:rgb(57,63,75)
      .sidebarUploadContainer
        width:100%
        padding:0 20px
  .settingContent
    display:flex
    flex-direction: row
    padding: 20px 50px
    overflow:hidden
    margin-left: 250px
    margin-bottom: 20px



