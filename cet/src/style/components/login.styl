@import "../../style/variable.styl";
#login
  height:100%
  .login-wrapper
    display:flex
    flex-direction:column
    width: 100%
    height: 100%
    .logo
      display:inline-block
      margin:50px 0 0 50px
    .slider3D
      /*position:relative*/
      .login-container
        width:388px
        height: 400px
        margin: 0 auto
        padding:10px 40px
        border-radius:10px
        border:1px solid #d1dbe5
        background-color:#fff
        //transform: translate(-50%,-50%);
        .title
          cursor :pointer
          width: 200px
          height: 50px
          margin: 10px auto 30px
          padding: 10px 0
          text-align:center
          font-size: 36px
          color: BLUECOLOR
        .captcha-wrapper
          display:flex
          .capt
            width: 100px
            margin-right: 10px
            margin-left:0PX
          .cap-img
            height: 100%
        .detail
          width: 300px
          height: 25px
          margin-top: 5px
          font-size: 16px
          color:DetailTextColor
          .remember-btn,.forget-btn
            display: inline-block
          .remember-btn
            float:left
          .forget-btn
            float:right
            a
              color:inherit
              text-decoration: none
      .mobile-container
        position: absolute
        top: 100px
        left: calc(50% - 194px)
        width:388px
        height: 400px
        padding:10px 40px
        border-radius:10px
        border:1px solid #d1dbe5
        background-color:#fff
        .title
          cursor :pointer
          width: 200px
          height: 50px
          margin: 10px auto 20px
          padding: 10px 0
          text-align:center
          font-size: 36px
          color: BLUECOLOR
        .mobile-login-form
          font-size: 16px
          color:DetailTextColor
          .mobile-captcha-wrapper
            .capt
              width: 150px
            .capBtn
              cursor: pointer
              display: inline-block
              width: 140px
              margin:0 auto
              text-align: center
              &:hover
                color: BLUECOLOR
              .countTxt
                cursor:not-allowed
                font-size: 30px
                color: InputLineColor
        .back-btn
          width: 100%
          margin: 15px auto
          font-size: 16px
          text-align:center
          color:DetailTextColor



// 输入框共同样式
.input-item
  width: 300px
  height: 40px
  margin:10px auto
  border-top: none
  border-left: none
  border-right: none
  border-bottom:1px solid InputLineColor
  font-size:20px
  text-indent:4px
// 登陆按钮共同样式
.login-btn
  width: 300px
  height: 40px
  margin-top: 20px
  border:none
  border-radius:5px
  font-size: 20px
  color:#fff
  background-color:BLUECOLOR


//3d转换效果
.slider3D_change
  transition:opacity .4s ease-in-out,
    transform .5s ease-in-out
.slider3D_change_fadeLeft
  transform: translate3d(-100%,-50%,0) rotateY(-45deg) translate3d(-100%,0,0)
  opacity:0
  pointer-events :none;
.slider3D_change_fadeRight
  transform: translate3d(25%,-50%,0) rotateY(45deg) translate3d(100%,0,0)
  opacity:0
  pointer-events :none;
