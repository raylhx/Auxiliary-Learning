@import "../variable.styl";
// 隐藏切换样式
.hidePlain
  display: none
  opacity: 0
  transition: opacity 0.6s
.displayPlain
  display: block
  opacit: 1
  transition: opacity 0.6s

#index
  .header-wrapper
    z-index: 3
    background-color: #409eff

  .el-main
    .container-wrapper
      width: 960px
      height: auto
      margin: 20px auto
      .upload-wrapper
        width: 100%
        height: auto
        padding: 10px
        margin-bottom: 10px
        border-radius: 5px
        background-color: #ffffff
        .textarea-wrapper
          display :flex
          .btn-wrapper
            width: 86px
            height: 30px
            margin-right: 10px
          .upload-textarea
            width: 98%
            height: 100px
            font-size: 20px
            resize:none
      .progress-wrappper
        display: flex
        width: 100%
        height: 160px
        padding: 10px
        margin-bottom: 10px
        border-radius: 5px
        background-color: #ffffff
        .point
          color: DetailTextColor
          margin-top: 60px
          margin-left: 20px
        .el-progress
          margin-left: 30%
      .arcticle-wrapper
        width: 100%
        height: auto
        min-height: 200px
        padding: 10px 20px
        border-radius: 5px
        background-color: #ffffff
        p
          margin-bottom :40px
          color: FontColor
          font-size: 18px
          line-height: 46px
        .info-wrapper
          margin-bottom: 8px
          h2
            color: HintColor

// 悬浮框效果
.upload-text-wrapper
  position: absolute
  left: 0
  top: 0
  width: 900px
  height: auto
  min-height: 50px
  background-color: rgba(64,158,255,0.8)
  border-radius: 5px
  box-shadow : 2px 2px 10px #000
  .container
    padding: 1PX 2px
    width:100%
    height:inherit
    .el-loading-mask
      width:100%
      height:100%
      .el-loading-spinner
        margin-top: -15px
    .text
      display:inline-block
      min-height: 50px
      border-radius: 5px
      line-height: 1.5em
      font-size: 20px
      color: white
